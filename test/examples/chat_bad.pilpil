actor User {
    table "users"
    columns [
        id: Int,
        alcohol_ppm: Int,
    ]
}

resource Message {
    table "messages"
    columns [
        id: Int,
        chat: Chat,
    ]
}

resource Chat {
    table "chat"
    columns [
        id: Int,
        users_set: User # [Users] m2m via "table"
    ]
}

can_insert(u:User, m:Message) if
    is_not_drunk(u)
    && chat_contains(m.chat, u)

is_not_drunk(u: User) if u.alcohol_ppm < 5

#chat_contains(c: Chat, u: User) if u in c.users_set
chat_contains(c: Chat, u: User) if u = c.users_set
